@model IEnumerable<OnyeijeSchool.Models.Blog>

@{
    ViewBag.Title = "Index";
}
<div class="wizard-navigation">
    <ul class="nav nav-pills col-md-12">
        <li class="nav-item">
            <a class="nav-link active " data-toggle="tab" role="tab">
                Blog List
            </a>
        </li>
    </ul>
    <div class="pull-right">
        <a href="@Url.Action("Create", "Blogs")" class="btn btn-rose btn-fill">Post a New Blog</a>

    </div>
    <div class="pull-right">

    </div>
    <div class="clearfix"></div>
</div>
<hr />
<div class="row">

    <div class="col-md-9">



        @ViewBag.Empty

        @foreach (var post in Model)
        {
            <div class="card">
                <div class="array">
                    <div class="col-lg-12" style="background-color:white; ">


                        <b style="font-size:20px"><a href="@Url.Action("Details", "Blogs", new { id = post.BlogId })">@post.Title</a></b><br />
                        <p>@post.ShortDescription<br /><br />Posted by:  @post.UserCreated on @post.DateCreated</p>

                    </div>
                </div>

            </div>
        }
        <hr />

    </div>





</div>
