@model OnyeijeSchool.Models.Blog

@{
    ViewBag.Title = "Edit";
}

<div class="row">


    <div class="panel panel-body" style="padding:50px;">
        @{

            var tags = string.Join(", ", ViewBag.Tags as List<string>);
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Edit Post</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BlogId)

                <label>Title</label>
                <input type="text" name="title" style="" class="form-control" value="@ViewBag.PostTitle" placeholder="The headline goes here..." /><br />


                <label>Short Description</label>
                <textarea name="content" class="form-control" style="width: 300px;" placeholder="Give a Short description of your content?">@ViewBag.ShortDescription</textarea><br />

                
                <label>Content</label>
                <textarea name="content" class="form-control" style="height: 600px;" placeholder="What would you like to write?">@ViewBag.Content</textarea><br />


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
