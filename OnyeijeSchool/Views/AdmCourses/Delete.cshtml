@model OnyeijeSchool.Models.AdmCourses

@{
    ViewData["Title"] = "Delete";
}

    <div class="card ">

        <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
        <div class="card-header">
            <h3 class="card-title">
                Delete this Course
            </h3>

        </div>
        <div class="wizard-navigation">
            <ul class="nav nav-pills col-md-12">
                <li class="nav-item">
                    <a class="nav-link active " data-toggle="tab" role="tab">
                        Completely remove this course from my list
                    </a>
                </li>
            </ul>
        </div>
        <hr />
        <div class="card-body">
            <div class="tab-content">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CourseCode)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CourseCode)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsEnabled)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsEnabled)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CourseTitle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CourseTitle)
                    </dd>
             
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                   
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="CourseId" />
                    <input type="submit" value="Yes! Delete it" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-primary">Cancel</a>
                </form>
            </div>
        </div>


    </div>


@if (ViewBag.Message != null)
{
    <span class="success sweet-alert"> @ViewBag.Message</span>
}
<script>
    $('#fileUpload').click(function (e) {
       Swal.fire({
                position: 'top-end',
                type: 'success',
                title: 'Data has been Deleted successfully',
                showConfirmButton: false,
                timer: 1500
            })
            return true;
    });
</script>