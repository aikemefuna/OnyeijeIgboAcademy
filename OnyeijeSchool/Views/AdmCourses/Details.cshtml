@model OnyeijeSchool.Models.CourseIndex

@{
    ViewData["Title"] = "Details";
}

<div class="row" >
    <div class=" card col-lg-12" style="background-color:white; border-radius:15px; border-color:grey">
        <div class="wizard-navigation">
            <ul class="nav nav-pills col-md-12">
                <li class="nav-item">
                    <a class="nav-link active " data-toggle="tab" role="tab">
                        Course
                    </a>
                </li>
            </ul>

        </div>
        @if (Model != null)
        {
           
            <table class="table">
                <tr>

                    <th>Course</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>

                @foreach (var item in Model.AdmCourses )
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseTitle)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td>
                            @if (item.IsEnabled == true)
                            {
                                <button class="btn btn-success">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-check-2"></i>
                                    </span>
                                    Enabled
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-pinterest">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-simple-remove"></i>
                                    </span> Disabled
                                </button>
                            }
                        </td>

                    </tr>
                }

            </table>
        }
    </div>
    
</div>
<hr />
<div class="row">
    <div class="card col-lg-12">
        <div class="wizard-navigation">
            <ul class="nav nav-pills col-md-12">
                <li class="nav-item">
                    <span class="nav-link active " data-toggle="tab" role="tab">
                        Instructors <a href="#" id="Data"  ><i class="nc nc-calendar-60"></i></a>
                    </span>
                </li>
            </ul>
            </div>
        <div class="data">
            @if (Model.InstructorCourse != null)
            {
                <h3>Instructor Assigned to Course</h3>
                <table class="table">
                    <tr>

                        <th>Instructor Name</th>

                    </tr>

                    @foreach (var item in Model.InstructorCourse)
                    {

                        <tr>
                            <td>
                                @item.InstructorId
                            </td>

                        </tr>
                    }

                </table>
            }
        </div>

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="card col-lg-6">
            <div class="wizard-navigation">
                <ul class="nav nav-pills col-md-12">
                    <li class="nav-item">
                        <span class="nav-link active " data-toggle="tab" role="tab">
                            Modules <a href="#" id="Data1"><i class="nc nc-calendar-60"></i></a>
                        </span>
                    </li>
                </ul>

            </div>
            <div class="data1">
                @if (Model.AdmModules != null)
                {
                    <h3>Modules Assigned to Course</h3>
                    <table class="table">
                        <tr>

                            <th>Module</th>
                            <th>Description</th>
                            <th>Status</th>
                        </tr>

                        @foreach (var item in Model.AdmModules)
                        {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        
                        <td>
                            @if (item.IsEnabled == true)
                            {
                                <button class="btn btn-success">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-check-2"></i>
                                    </span>
                                    Enabled
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-pinterest">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-simple-remove"></i>
                                    </span> Disabled
                                </button>
                            }
                        </td>

                    </tr>
                        }

                    </table>
                }
            </div>
        </div>
        <div class="card col-lg-6">
            <div class="wizard-navigation">
                <ul class="nav nav-pills col-md-12">
                    <li class="nav-item">
                        <span class="nav-link active " data-toggle="tab" role="tab">
                            Classes <a href="#" id="Data2"><i class="nc nc-calendar-60"></i></a>
                        </span>
                    </li>
                </ul>

            </div>
            <div class="data2">
                @if (Model.AdmClass != null)
                {
                    <h3>Classes Assigned to Course</h3>
                    <table class="table">
                        <tr>

                            <th>Class Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                        </tr>

                        @foreach (var item in Model.AdmClass)
                        {

                    <tr>
                        <td>
                            @item.ClassName
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @if (item.StartDate > DateTime.Now.Date)
                            {
                                <button class="btn btn-warning">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-calendar-60"></i>
                                    </span>
                                    Coming Soon..
                                </button>
                                item.IsActive = false;
                            }
                            else if (item.StartDate <= DateTime.Now.Date && item.EndDate > DateTime.Now.Date)
                            {
                                <button class="btn btn-success">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-button-play"></i>
                                    </span>
                                    In Progress
                                </button>
                                item.IsActive = true;
                            }
                            else if (item.StartDate < DateTime.Now.Date && item.EndDate < DateTime.Now.Date)
                            {
                                <button class="btn btn-pinterest">
                                    <span class="btn-label">
                                        <i class="nc-icon nc-simple-remove"></i>
                                    </span>
                                    Class Ended
                                </button>
                                item.IsActive = false;
                            }

                        </td>
                    </tr>
                        }

                    </table>
                }
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="card col-lg-12">
            <div class="wizard-navigation">
                <ul class="nav nav-pills col-md-12">
                    <li class="nav-item">
                        <span class="nav-link active " data-toggle="tab" role="tab">
                            Current Student Subscription <a href="#" id="Data3"><i class="nc nc-calendar-60"></i></a>
                        </span>
                    </li>
                </ul>

            </div>
            <div class="data3">
               
            </div>
        </div>
        
    </div>



