@model IEnumerable<OnyeijeSchool.Models.Questions>

@{
    ViewData["Title"] = "Index";
}

<div class="wizard-navigation">
    <ul class="nav nav-pills col-md-12">
        <li class="nav-item">
            <a class="nav-link active " data-toggle="tab" role="tab">
                Questions Bank
            </a>
        </li>
    </ul>

    <div class="pull-right">
        <a href="@Url.Action("Create", "ExamSetUps")" class="btn btn-rose btn-fill">Create New Exam</a>

    </div>
    <div class="pull-right">
        <a href="@Url.Action("Create", "Questions")" class="btn btn-rose btn-fill">Create a New Questions</a>

    </div>
    <div class="clearfix"></div>

</div>
<hr />
<table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Course
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RightAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmCourses.CourseTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instructions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RightAnswer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserModified)
                </td>
                <td>
                    <a asp-area="" asp-controller="Questions" asp-action="Edit" asp-route-id="@item.QuestId" class="btn btn-warning btn-link btn-icon btn-sm" title="Edit"><i class="fa fa-edit"></i></a>
                    <a asp-area="" asp-controller="Questions" asp-action="Details" asp-route-id="@item.QuestId" class="btn btn-primary btn-link btn-icon btn-sm" title="View"><i class="fa fa-eye"></i></a>
                    <a asp-area="" asp-controller="Questions" asp-action="Delete" asp-route-id="@item.QuestId" class="btn btn-danger btn-link btn-icon btn-sm" title="Delete"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
