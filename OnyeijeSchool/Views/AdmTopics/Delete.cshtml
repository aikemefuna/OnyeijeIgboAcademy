@model OnyeijeSchool.Models.AdmTopic

@{
    ViewData["Title"] = "Delete";
}

    <div class="card ">

        <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
        <div class="card-header">
            <h3 class="card-title">
                Delete this Topic
            </h3>

        </div>
        <div class="wizard-navigation">
            <ul class="nav nav-pills col-md-12">
                <li class="nav-item">
                    <a class="nav-link active " data-toggle="tab" role="tab">
                        Completely remove this topic from my list
                    </a>
                </li>
            </ul>
        </div>
        <hr />
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane show active">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TopicNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TopicNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Summary)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Summary)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Notes)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Notes)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.AdmModules)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AdmModules.ModuleId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IsEnabled)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IsEnabled)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Yes! Delete it" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-primary">Cancel</a>
                    </form>
                </div>
            </div>


        </div>


        @if (ViewBag.Message != null)
        {
            <span class="success sweet-alert"> @ViewBag.Message</span>
        }
        </div>
        <script>
    $('#fileUpload').click(function (e) {
       Swal.fire({
                position: 'top-end',
                type: 'success',
                title: 'Data has been Deleted successfully',
                showConfirmButton: false,
                timer: 1500
            })
            return true;
    });
        </script>
