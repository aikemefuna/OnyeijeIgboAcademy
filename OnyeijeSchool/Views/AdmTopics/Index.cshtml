@model IEnumerable<OnyeijeSchool.Models.AdmTopic>

@{
    ViewData["Title"] = "Index";
}

    <div class="wizard-navigation">
        <ul class="nav nav-pills col-md-12">
            <li class="nav-item">
                <a class="nav-link active " data-toggle="tab" role="tab">
                    Topic List
                </a>
            </li>
        </ul>
        <div class="pull-right">
            <a href="@Url.Action("Create", "AdmTopics")" class="btn btn-rose btn-fill">Add New Topic</a>

        </div>
        <div class="pull-right">

        </div>
        <div class="clearfix"></div>
    </div>
<hr />
<table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                Topic Title
            </th>
            <th>
                Summary
            </th>
            <th>
                Notes
            </th>
            <th>
                Module
            </th>
            <th>
                Status
            </th>
            <th>
                Video Url
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TopicNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmModules.Title)
                </td>
                <td>
                    @if (item.IsEnabled == true)
                    {
                        <button class="btn btn-success">
                            <span class="btn-label">
                                <i class="nc-icon nc-check-2"></i>
                            </span>
                            Enabled
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-pinterest">
                            <span class="btn-label">
                                <i class="nc-icon nc-simple-remove"></i>
                            </span> Disabled
                        </button>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VideoUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserModified)
                </td>
                <td>
                    <a asp-area="" asp-controller="AdmTopics" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-link btn-icon btn-sm" title="Edit"><i class="fa fa-edit"></i></a>
                    <a asp-area="" asp-controller="AdmTopics" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-link btn-icon btn-sm" title="View"><i class="fa fa-eye"></i></a>
                    <a asp-area="" asp-controller="AdmTopics" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-link btn-icon btn-sm" title="Delete"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="card-footer" style="margin-top:30px">
    
</div>