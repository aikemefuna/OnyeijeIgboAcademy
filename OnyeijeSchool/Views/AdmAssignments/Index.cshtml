@model IEnumerable<OnyeijeSchool.Models.AdmAssignment>

@{
    ViewData["Title"] = "Index";
}
<div class="wizard-navigation">
    <ul class="nav nav-pills col-md-12">
        <li class="nav-item">
            <a class="nav-link active " data-toggle="tab" role="tab">
                Assignment
            </a>
        </li>
    </ul>

    <div class="pull-right">
        <a href="@Url.Action("Create", "AdmAssignments")" class="btn btn-rose btn-fill">Create New Assignment</a>

    </div>
    <div class="pull-right">
        <a href="@Url.Action("Create", "AdmClasses")" class="btn btn-rose btn-fill">Set up a New Class</a>

    </div>
    <div class="clearfix"></div>

</div>
<hr />
<table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
              Class
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
               Description
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmClass.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserModified)
            </td>
            <td>
                <a asp-area="" asp-controller="AdmAssignments" asp-action="Edit" asp-route-id="@item.AssignmentId" class="btn btn-warning btn-link btn-icon btn-sm" title="Edit"><i class="fa fa-edit"></i></a>
                <a asp-area="" asp-controller="AdmAssignments" asp-action="Details" asp-route-id="@item.AssignmentId" class="btn btn-primary btn-link btn-icon btn-sm" title="View"><i class="fa fa-eye"></i></a>
                <a asp-area="" asp-controller="AdmAssignments" asp-action="Delete" asp-route-id="@item.AssignmentId" class="btn btn-danger btn-link btn-icon btn-sm" title="Delete"><i class="fa fa-times"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
